{{#if addNewAnnouncement}}
  <h1>New Announcement</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="name">Name</label>
        {{input value=name id="name"}}
      </div>
      <div class="form-group">
        <label for="message">Message</label>
        {{input value=message id="message"}}
      </div>
      <div class="form-group">
        <label for="date">Date</label>
        {{input value=date id="date"}}
      </div>
      <button {{action 'saveAnnouncement1'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'announcementFormShow'}}>New Announcement</button>
{{/if}}
